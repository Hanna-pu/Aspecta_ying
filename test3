client = pymongo.MongoClient("mongodb://localhost:27017/")

db = client["mydatabase"]

collection = db["customers"]

query = { "address": "Highway 37" }

new_value = { "$set": { "address": "Park Lane 38" } }

collection.update_one(query, new_value)

